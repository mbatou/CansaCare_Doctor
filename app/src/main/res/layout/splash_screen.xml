<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_color"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/cansacare_logo"
        android:layout_width="328dp"
        android:layout_height="232dp"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/cansacare_logo"
        android:src="@drawable/cansacare_primary_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="334dp"
        android:layout_height="304dp"
        android:contentDescription="@string/splash_screen_illustration"
        android:src="@drawable/cansacare_illust_splashscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>