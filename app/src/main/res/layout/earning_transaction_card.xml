<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:contentPadding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_earnings_patient_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/patient_name"
                android:textColor="@color/black"
                android:textSize="@dimen/H2"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/my_earnings_transaction_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/my_earnings_patient_name" />

            <TextView
                android:id="@+id/my_earnings_transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/completed"
                android:textSize="@dimen/H2"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_earnings_transaction_divider" />

            <TextView
                android:id="@+id/my_earnings_transaction_amount_TTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earnings_sample"
                android:textSize="@dimen/H2"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_earnings_transaction_divider" />

            <TextView
                android:id="@+id/my_earnings_transaction_amount"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/earnings_sample"
                android:textColor="@color/black"
                android:textSize="@dimen/H2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_earnings_transaction_charge"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/earnings_sample"
                android:textColor="@color/earnings_charge_red"
                android:textSize="@dimen/H2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_earnings_transaction_amount" />

            <TextView
                android:id="@+id/my_earnings_transaction_prompt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/earning_prompt"
                android:textColor="@color/black"
                android:textSize="@dimen/H2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/my_earnings_transaction_prompt"
                android:id="@+id/my_earnings_transaction_charge_prompt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/charge_prompt"
                android:textColor="@color/earnings_charge_red"
                android:textSize="@dimen/H2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>